<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvOrderComplete"
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Order#"
            />
        <TextView
            android:id="@+id/tvUserCompOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000"
            android:text="User"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvOrderNoCompletedOrder"
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Order No"
            android:textSize="17sp"
            android:layout_marginLeft="10sp"
            android:textColor="@color/colorBlue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Images"
            android:layout_marginRight="10sp"
            android:textSize="17sp"
            android:id="@+id/tvShowImages"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Details:"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="20sp"
        android:textColor="#000"
        android:layout_marginLeft="10sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Arived Date"/>
        <TextView
            android:id="@+id/tvArivedDateComOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/4/2521"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Ship Date"/>
        <TextView
            android:id="@+id/tvShipDateCompOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/4/2018"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="20sp"
        android:layout_height="2sp"
        android:layout_marginBottom="10sp"
        android:background="#BDBDBD"/>

</LinearLayout>