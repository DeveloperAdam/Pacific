    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Arived Date"/>
        <TextView
            android:id="@+id/tvArivedDateShip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/4/2521"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Ship Date"/>
        <TextView
            android:id="@+id/tvShipDateShip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/4/2018"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:text="Notes Production"/>
        <TextView
            android:id="@+id/tvNotesProductionShip"
            android:layout_width="0sp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:layout_marginRight="5sp"
            android:maxLines="1"
            android:text="Write here"/>
        <ImageView
            android:id="@+id/ivEditShip"
            android:layout_width="0sp"
            android:layout_weight="0.1"
            android:layout_height="25sp"
            android:src="@drawable/pencil"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnCompleteOrders"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/blue_roundbtn"
        android:textColor="#fff"
        android:text="Complete Order"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="20sp"
        android:layout_height="2sp"
        android:layout_marginBottom="10sp"
        android:background="#BDBDBD"/>

</LinearLayout>