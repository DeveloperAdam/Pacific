<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BDBDBD"
    tools:context="com.techease.pacific.Fragments.UploadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:orientation="vertical"
        android:layout_marginTop="50sp"
        android:background="#fff"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:src="@drawable/camera"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textColor="@color/darkBlue"
            android:text="Uploaded Image"/>
    </LinearLayout>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#fff">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10sp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order#" />

            <TextView
                android:id="@+id/tvOrderNoUploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order No"
                android:layout_marginTop="20sp"
                android:textColor="@color/colorBlue"
                android:textSize="17sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <FrameLayout
        android:id="@+id/fm1"
        android:layout_width="0sp"
        android:layout_weight="0.3"
        android:layout_height="wrap_content"
        android:background="@drawable/boundry">

        <ImageView
            android:id="@+id/ivUploadImage1"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:scaleType="center"
            android:src="@drawable/picture" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl1"
            android:visibility="gone"
            android:layout_margin="5sp"
            >
            <ImageView
                android:id="@+id/ivCross1"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/cancel"
                />
            <ImageView
                android:id="@+id/ivUpload1"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:src="@drawable/upload"
                />
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fm2"
        android:layout_width="0sp"
        android:layout_weight="0.3"
        android:layout_marginLeft="5sp"
        android:layout_height="wrap_content"
        android:background="@drawable/boundry"
        >

        <ImageView
            android:id="@+id/ivUploadImage2"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:scaleType="center"

            android:src="@drawable/picture" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl2"
            android:visibility="gone"
            android:layout_margin="5sp"
            >
            <ImageView
                android:id="@+id/ivCross2"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/cancel"
                />
            <ImageView
                android:id="@+id/ivUpload2"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:src="@drawable/upload"
                />
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fm3"
        android:layout_width="0sp"
        android:layout_weight="0.3"
        android:layout_marginLeft="5sp"
        android:layout_height="wrap_content"
        android:background="@drawable/boundry">

        <ImageView
            android:id="@+id/ivUploadImage3"
            android:layout_width="match_parent"
            android:layout_height="120sp"

            android:scaleType="center"
            android:src="@drawable/picture" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl3"
            android:visibility="gone"
            android:layout_margin="5sp"
            >
            <ImageView
                android:id="@+id/ivCross3"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/cancel"
                />
            <ImageView
                android:id="@+id/ivUpload3"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:src="@drawable/upload"
                />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:orientation="horizontal"
    android:gravity="center">
    <FrameLayout
        android:id="@+id/fm4"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:background="@drawable/boundry">

        <ImageView
            android:id="@+id/ivUploadImage4"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginRight="5sp"
            android:scaleType="center"
            android:src="@drawable/picture" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl4"
            android:visibility="gone"
            android:layout_margin="5sp"
            >
            <ImageView
                android:id="@+id/ivCross4"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/cancel"
                />
            <ImageView
                android:id="@+id/ivUpload4"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:src="@drawable/upload"
                />
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fm5"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:background="@drawable/boundry">

        <ImageView
            android:id="@+id/ivUploadImage5"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:scaleType="center"
            android:src="@drawable/picture" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl5"
            android:visibility="gone"
            android:layout_margin="5sp"
            >
            <ImageView
                android:id="@+id/ivCross5"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/cancel"
                />
            <ImageView
                android:id="@+id/ivUpload5"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:src="@drawable/upload"
                />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>



            </LinearLayout>


</ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivTakePic"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:src="@drawable/camera" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Take Pic"
                        android:textColor="@color/darkBlue"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="2sp"
                    android:layout_height="50sp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivGallery"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:src="@drawable/gallery" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Gallery"
                        android:textColor="@color/darkBlue"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="2sp"
                    android:layout_height="50sp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivSend"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:src="@drawable/send" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Attach"
                        android:textColor="@color/darkBlue"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <View
                    android:id="@+id/view"
                    android:layout_width="2sp"
                    android:visibility="gone"
                    android:layout_height="50sp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/llUploadComplete"
                    android:layout_width="0sp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivComplete"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/comp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Complete"
                        android:textColor="@color/darkBlue"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
